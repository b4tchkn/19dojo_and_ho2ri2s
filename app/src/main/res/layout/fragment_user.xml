<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="jp.co.cyberagent.dojo2019.ui.user.UserViewModel"/>
    </data>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.user.UserFragment"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginTop="24dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="16dp"/>

        <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/title"
                android:textSize="30sp"
                android:gravity="center"/>

        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:gravity="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilName"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="#ffffff"
                    >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="full name"
                        android:text="@={viewModel.name}"
                        android:textColor="#ffffff"
                        android:background="@drawable/edit_text_style"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilGithubAccount"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffffff"
                    >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtGithubAccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="github Account"
                        android:text="@={viewModel.githubAccount}"
                        android:textColor="#ffffff"
                        android:background="@drawable/edit_text_style"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTwitterAccount"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffffff"
                    >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtTwitterAccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="twitter Account"
                        android:text="@={viewModel.twitterAccount}"
                        android:textColor="#ffffff"
                        android:background="@drawable/edit_text_style"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/button_profile"
                    android:background="@drawable/list_frame_style"
                    android:textColor="#ffffff"
                    />

            <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


        </LinearLayout>
    </LinearLayout>
</layout>